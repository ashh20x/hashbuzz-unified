{
  "name": "dapp-backend",
  "version": "1.0.0",
  "description": "This servie will handle all the backend related job that are required for dapp in hashuzz project",
  "main": "src/index.js",
  "scripts": {
    "prebuild": "node buildContract",
    "build": "npx ts-node build.ts",
    "build:server": "./node_modules/.bin/ts-node build.ts",
    "lint": "eslint . --ext .ts",
    "start": "node -r module-alias/register ./dist --env=production",
    "dev": "nodemon",
    "test": "nodemon --config ./spec/nodemon.json",
    "test:no-reloading": "./node_modules/.bin/ts-node -r tsconfig-paths/register ./spec",
    "preReadyPrisma": "npx prisma db pull",
    "readyPrisma": "npx prisma generate",
    "db:pull": "npx prisma db pull && npx prisma generate",
    "db:push": "npx prisma db push && npx prisma generate"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "./node_modules/.bin/ts-node -r tsconfig-paths/register ./src"
  },
  "_moduleAliases": {
    "@services": "dist/services",
    "@shared": "dist/shared",
    "@server": "dist/server",
    "@routes": "dist/routes",
    "@middleware": "dist/middleware",
    "@validator": "dist/validator",
    "@smartContract": "dist/smartContract",
    "@controller": "dist/controller"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 160
        }
      ],
      "no-console": 1,
      "no-extra-boolean-cast": 0,
      "@typescript-eslint/restrict-plus-operands": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-floating-promises": 0,
      "@typescript-eslint/no-unsafe-member-access": 0,
      "@typescript-eslint/no-unsafe-assignment": 0,
      "@typescript-eslint/no-explicit-any": 0
    }
  },
  "eslintIgnore": [
    "src/public/",
    "build.ts"
  ],
  "keywords": [
    "hashbuzz"
  ],
  "author": "hashbuzz-dev",
  "license": "ISC",
  "dependencies": {
    "@hashgraph/sdk": "^2.30.0",
    "@prisma/client": "^5.0.0",
    "bignumber.js": "^9.1.2",
    "command-line-args": "^5.2.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.14.2",
    "http-errors": "^2.0.0",
    "http-status-code": "^2.1.0",
    "jet-logger": "^1.2.6",
    "jsdoc-to-markdown": "^8.0.0",
    "json-bigint": "^1.0.0",
    "lodash": "^4.17.21",
    "markdown-it": "^13.0.1",
    "module-alias": "^2.2.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.1",
    "node-fetch": "^3.3.1",
    "node-schedule": "^2.1.0",
    "solc": "^0.8.16",
    "twit": "^2.2.11",
    "twitter-api-v2": "^1.12.3",
    "web3": "^1.7.5"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "@remix-project/remixd": "^0.6.16",
    "@types/command-line-args": "^5.2.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/find": "^0.2.1",
    "@types/fs-extra": "^9.0.13",
    "@types/helmet": "^4.0.0",
    "@types/http-status-codes": "^1.2.0",
    "@types/json-bigint": "^1.0.1",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.185",
    "@types/module-alias": "^2.0.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.6.4",
    "@types/node-cron": "^3.0.2",
    "@types/node-schedule": "^2.1.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "apidoc": "^1.1.0",
    "concurrently": "^7.3.0",
    "eslint": "^8.9.0",
    "find": "^0.3.0",
    "fs-extra": "^10.1.0",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^2.0.19",
    "prisma": "^5.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.7.4",
    "uuid": "^8.3.2"
  }
}
